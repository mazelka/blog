<h1><%= @article.title %></h2>

<div>
  <%= @article.description %>
</div>

<hr />
<h4>Comments</h4>
<%= nested_comments @comments.arrange(order: :created_at) %>
<p>
<p>
<%= link_to "Add comment", new_article_comment_path(article_id: @article.id), class: "reply_button btn btn-outline-primary btn-sm", :remote => true, 'data-toggle' =>  "modal", 'data-target' => '#new_comment' %>

<div class="add-comment">
  <%= link_to "Articles list", articles_path %> |
  <%= link_to "Edit this article", edit_article_path(@article) %>
</div>
<div id="new_comment" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
    </div>
  </div>
</div>
