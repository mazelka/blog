<h1>All articles</h1>
<p><%= link_to "Create new article", new_article_path, class: 'btn btn-primary btn-lg'%></p>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |article| %>
        <tr scope="row">
            <td><%= article.title%></td>
            <td><%= article.description %></td>
            <div class="btn-group" role="group">
                <td class ='td-min-width'><%= link_to "Show", article_path(article), class: 'btn btn-outline-primary btn-sm' %>
                <%= link_to "Edit", edit_article_path(article), class: 'btn btn-outline-info btn-sm' %>
                <%= link_to "Delete", article_path(article),
                                        method: :delete, data: {confirm: 'Are you sure?'},
                                        class: 'btn btn-outline-dark btn-sm' %></td>
            </div>
        </tr>
    <% end %>
<tbody>
</table>
